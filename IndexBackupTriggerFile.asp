<span><br><br><h1>Backup Trigger Files (Live Data)</h1><br><br><table id="table9" class="mytable"><thead><tr><th width="80px">Server</th><th width="250px">Trigger Path</th><th width="120px">Last Modified</th></tr></thead><tbody><%Dim fso: Set fso = CreateObject("Scripting.FileSystemObject")For i = 0 to Ubound(EVServersList,2)	If EVServersList(7,i) <> "" then		'* Declare variables and assign values for current server.		Dim EVServer: EVServer = EVServersList(1,i)		Dim TriggerPath: TriggerPath = EVServersList(7,i)		'* Check for trailing \ and insert if not present.		If NOT Right(TriggerPath,1) = "\" then			TriggerPath = TriggerPath & "\"		End if		'* Check for : and replace with $ if present.		If InStr(TriggerPath,":") then			TriggerPath = replace(TriggerPath,":","$")		End if		'* Set file to the trigger file on the current server.		Dim file: Set file = fso.GetFile("\\" & EVServer & "\" & TriggerPath & "IgnoreArchiveBitTrigger.old")		'* If trigger file is found then write the file.DateLastModified, otherwise report file was not found.		If fso.FileExists("\\" & EVServer & "\" & TriggerPath & "IgnoreArchiveBitTrigger.old") Then			%><tr><td><%=EVServer%></td><td><%=TriggerPath%></td><td><%=file.DateLastModified%></td></tr><%		Else			%><tr><td><%=EVServer%></td><td><%=TriggerPath%></td><td>File not found</td></tr><%		End if	End ifNext%></tbody></table><br></span>